                    android:textSize="14.0sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/text_cep_avg_label"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/textInfoTtffAvg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/placeholder_value"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/textInfoAccAvg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/placeholder_value"
                    android:textSize="14.0sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
