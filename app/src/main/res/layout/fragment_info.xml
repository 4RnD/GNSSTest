                    android:textSize="14.0sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/text_loc_acc_txt"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/textInfoAcc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/placeholder_value"
                    android:textSize="14.0sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/text_loc_lon_txt"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/textInfoLon"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/placeholder_value"
                    android:textSize="14.0sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/text_loc_lat_txt"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/textInfoLat"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/placeholder_value"
                    android:textSize="14.0sp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/text_loc_alt_txt"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/textInfoAlt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/placeholder_value"
                    android:textSize="14.0sp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:text="@string/text_loc_speed_txt"
                    android:textSize="14.0sp" />

                <TextView
                    android:id="@+id/textInfoSpeed"
                    android:layout_width="fill_parent"
